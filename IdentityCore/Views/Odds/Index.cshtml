                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OddCreator)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OddId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OddId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OddId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
