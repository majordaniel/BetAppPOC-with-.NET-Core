@model IEnumerable<IdentityCore.Models.TbOdds>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GameName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrawValue)
